class Account
{
    private :
        char password[20];
        char email[40];
    public :
        char* get_email()
        {
            return email;
        }
        char* get_pass()
        {
            return password;
        }
        void create_account()
        {
            int opt = 0;
            do
            {
                start();
                Account obj;
                char check[20];
                cin.ignore();  //remove
                cout<<"\n Enter Your Email Id : ";
                gets(obj.email);
                cout<<"\n Enter A Password : ";
                gets(obj.password);
                start();
                cout<<"\n Retype the password to confirm change ";
                gets(check);
                if(strcmp(check, obj.get_pass())==0)
                {
                    ofstream file("Acc.dat", ios::binary);
                    file.write((char*)&obj, sizeof(obj));
                    file.close();
                    opt = 1;
                    return;
                }
                else
                {
                    cout<<"\n Incorrect Match. "<<endl<<"Please Try Again";
                    opt = 0;
                }
            }while( opt == 1 );
        }
};

class Train
{
        private :
            long int tno;
            char tname[20], depcity[20], arrcity[20];
            date depdate, arrdate;
            Time deptime, arrtime, tottime;
            float dist, price;
        public :
            long get_tno()
            {
                return tno;
            }
            char* get_arrcity()
            {
                return arrcity;
            }
            char* get_depcity()
            {
                return depcity;
            }
            Train()
            {
                tno = 0;
                strcpy(tname, "Null");
                strcpy(depcity, "Null");
                strcpy(arrcity, "Null");
                depdate = {0,0,0};
                arrdate = {0,0,0};
                deptime = {0,0};
                arrtime = {0,0};
                tottime = {0,0};
                dist = 0;
                price = 0;
            }
            void get_details()
            {
                cout<<"\n Enter Train number : ";
                cin>>tno;
                cout<<" Enter Train name : ";
                cin.ignore(); //remove
                gets(tname);
                cout<<" Enter Departure City : ";
                gets(depcity);
                cout<<" Enter Arrival City : ";
                gets(arrcity);
                cout<<" Enter Total Distance : ";
                cin>>dist;
                cout<<" Enter Departure Date - \n";
                cout<<"     Enter Day : ";
                cin>>depdate.day;
                cout<<"     Enter Month : ";
                cin>>depdate.month;
                cout<<"     Enter Year : ";
                cin>>depdate.year;
                cout<<" Enter Arrival Date - \n";
                cout<<"     Enter Day : ";
                cin>>arrdate.day;
                cout<<"     Enter Month : ";
                cin>>arrdate.month;
                cout<<"     Enter Year : ";
                cin>>arrdate.year;
                cout<<" Enter Departure Time - \n";
                cout<<"     Enter hour : ";
                cin>>deptime.hour;
                cout<<"     Enter Arrival Time : ";
                cin>>deptime.minute;
                cout<<" Enter Arrival Time - \n";
                cout<<"     Enter Hour : ";
                cin>>arrtime.hour;
                cout<<"     Enter Minute : ";
                cin>>arrtime.minute;
                cout<<" Enter Total time of journey  -/n";
                cout<<"     Enter Hour : ";
                cin>>tottime.hour;
                cout<<"     Enter Minute : ";
                cin>>tottime.minute;
                cout<<" Enter price of each ticket : ";
                cin>>price;
            }
            void print_details()
            {
                cout<<"\n Train number : ";
                cout<<tno;
                cout<<"\n Train name : ";
                puts(tname);
                cout<<"\n Departure City : ";
                puts(depcity);
                cout<<"\n Arrival City : ";
                puts(arrcity);
                cout<<"\n Total Distance ( in km ) : "<<dist;
                cout<<"\n Departure Date - "<<depdate.day<<" - "<<depdate.month<<" - "<<depdate.year;
                cout<<"\n Arrival Date - "<<arrdate.day<<" - "<<arrdate.month<<" - "<<arrdate.year;
                cout<<"\n Departure Time - "<<deptime.hour<<" : "<<deptime.minute;
                cout<<"\n Arrival Time - "<<arrtime.hour<<" : "<<arrtime.minute;
                cout<<"\n Total time of journey  - "<<tottime.hour<<" hours & "<<tottime.minute<<" minutes";
                cout<<"\n Price of ticket : "<<price;
            }
};
class Passenger : public Train, public Account
{
    private :
        char pname[20];
        int age;
        long int tickno;
        long int mobno, trno;
    public :
         Passenger()
         {
                strcpy(pname, "Null");
                age=0;
                tickno = ( rand()%899 + 1000 );
                mobno = 0;
         }
         void getdata()
         {
            cout<<"\n Enter Passenger Name : ";
            cin.ignore(); //remove
            gets(pname);
            cout<<"Enter Train Number : ";
            cin>>trno;
            cout<<"Age : ";
            cin>>age;
            cout<<"Enter Mobile Number : ";
            cin>>mobno;
            start();
            ifstream f1("Train.dat", ios::binary);
            flag = 0;
            Train obj;
            while(!f1.eof())
            {
                f1.read((char*)&obj, sizeof(obj));
                if(obj.get_tno() == trno)
                {
                    flag = 1;
                    break;
                }
            }
            if(flag==0)
                cout<<"Train Not Available ";
         }
         void putdata()
         {
            cout<<"\n Ticket no : "<<tickno;
            cout<<"\n Passenger Name : ";
            puts(pname);
            cout<<"\n Email : ";
            puts(get_email());
            cout<<"\n Age : "<<age;
            cout<<"\n Mobile number : "<<mobno;
            cout<<"\n Train Number : "<<trno;
            cout<<"\n\n Do you want to view all details (Y/N) : ";
            cin>>ch;
            if(ch=='y'||ch=='Y')
            {
                Train obj;
                ifstream file("Train.dat", ios::binary);
                flag = 0;
                while( !file.eof() )
                {
                    file.read((char*)&obj, sizeof(obj));
                    if(trno ==obj.get_tno())
                    {
                        obj.print_details();
                    }
                }
            }
         }
         void book_ticket()
         {
             Passenger obj;
             obj.getdata();
             char ch;
             cout<<" Your Ticket info is : /n /n";
             obj.putdata();
             obj.print_details();
             cout<<"/n/n Do you want to confirm this ticket booking (Y/N) : ";
             cin>>ch;
             if((ch=='y')||(ch=='Y'))
             {
                 ofstream f2("Pass.dat", ios::binary);
                 f2.write((char*)&obj, sizeof(obj));
                 f2.close();
             }
             else
                 cout<<"\n Ticket Booking Cancelled ";
         }
         void search_ticket()
         {
            int flag = 0;
            long int ticket_no;
            Passenger pss;
            cout<<"\n Enter Ticket Number : ";
            cin>>ticket_no;
            ifstream file("Pass.dat", ios::binary);
            while( ! file.eof() )
            {
                file.read((char *) &pss, sizeof(pss));
                if( ticket_no==pss.tickno )
                {
                    pss.putdata();
                    flag = 1;
                    break;
                }
            }
            if(flag == 0)
                cout<<"\n No such passenger found";
            file.close();
        }
        //For non admin
        void train_by_no()
         {
            long int train_no ;
            Train obj;
            int flag = 0;
            cout<<"Enter Train Number To Be Searched For : ";
            cin>>train_no;
            ifstream file( "Train.dat", ios::in );
            while( !file.eof() )
            {
                file.read((char*)&obj,sizeof(obj));
                if( train_no == obj.get_tno() )
                    flag = 1;
                    break;
            }
            if( flag==1 )
            {
                cout<<"\n Search Successful ";
                obj.print_details();
            }
            else
                cout<<"\n No Such Train Found ";
            file.close();
         }
         void train_by_city()
         {
            char dep[15],arr[15];
            cout<<" Enter Departure City : ";
            gets(dep);
            cout<<" Enter Arrival City: ";
            gets(arr);
            Train obj;
            int flag = 0;
            ifstream file( "Train.dat", ios::binary);
            while( !file.eof() )
            {
                file.read((char*)&obj,sizeof(obj));
                if((strcmp(arr, obj.get_arrcity())==0)&&(strcmp(dep, obj.get_depcity())==0))
                    flag = 1;
                    cout<<"\n Search Successful ";
                    obj.print_details();
                    break;
            }
            if( flag==0)
                cout<<"\n No Such Train Found ";
            file.close();
         }
        void display_train()   //for admin and pass
        {
            Train obj;
            ifstream file( "Train.dat", ios::in );
            while( !file.eof() )
            {
                file.read( (char*)&obj, sizeof(obj) );
                obj.print_details();
            }
            file.close();
        }

        void add_train()  //for admin
        {
            Train obj;
            ofstream file( "Train.dat", ios::binary | ios::app );
            cout<<"\n Enter The following info to add train schedule ";
            obj.get_details();
            file.write((char*)&obj, sizeof(obj));
            file.close();
        }
        void update_train()
        {
            long int train_no;
            cout<<"\n Enter Train Number of The Train to be updated : ";
            cin>>train_no;
            Train obj;
            ifstream file("Train.dat", ios::binary );
            while( !file.eof() )
            {
                file.read( (char*)&obj, sizeof(obj) );
                if( train_no==obj.get_tno() )
                {
                    long pos = file.tellg();
                    file.seekg(-1*sizeof(obj), ios::cur );
                    file.close();
                    obj.get_details();
                    ofstream file1( "Train.dat", ios::binary | ios::app );
                    file1.seekp( pos, ios::beg );
                    file1.write((char*)&obj, sizeof(obj));
                    file1.close();
                }
            }
        }
        void delete_train()
        {
            long int train_no;
            cout<<"\n Enter Train Number of The Train To Be deleted : ";
            cin>>train_no;
            ifstream f1( "Train.dat", ios::binary );
            ofstream f2( "temp.dat", ios::binary );
            Train obj;
            int flag = 0;
            while( f1.eof() )
            {
                f1.read((char*)&obj, sizeof(obj));
                if(  obj.get_tno() != train_no )
                {
                    f2.write((char*)&obj, sizeof(obj));
                    flag = 1;
                }
            }
            if(flag == 0)
                cout<<"\n No such train found ";
            f1.close();
            f2.close();
            remove("Train.dat");
            rename("temp.dat", "Train.dat");
        }
        void update_ticket()
        {
            long int ticket_no;
            cout<<"\n Enter Ticket Number of The Booking to be updated : ";
            cin>>ticket_no;
            Passenger obj;
            ifstream file("Pass.dat", ios::binary );
            while( !file.eof() )
            {
                file.read( (char*)&obj, sizeof(obj) );
                if( ticket_no==obj.get_tno() )
                {
                    long pos = file.tellg();
                    file.seekg(-1*sizeof(obj), ios::cur );
                    file.close();
                    obj.getdata();
                    ofstream file1( "Pass.dat", ios::binary | ios::app );
                    file1.seekp( pos, ios::beg );
                    file1.write((char*)&obj, sizeof(obj));
                    file1.close();
                }
            }
        }
        void delete_ticket()
        {
            long int tick_no;
            cout<<"\n Enter Train Number of The Train To Be deleted : ";
            cin>>tick_no;
            ifstream f1( "Pass.dat", ios::binary );
            ofstream f2( "temp.dat", ios::binary );
            Passenger obj;
            int flag = 0;
            while( f1.eof() )
            {
                f1.read((char*)&obj, sizeof(obj));
                if(  obj.tickno != tick_no )
                {
                    f2.write((char*)&obj, sizeof(obj));
                    flag = 1;
                }
            }
            if(flag == 0)
                cout<<"\n No such Booking found ";
            f1.close();
            f2.close();
            remove("Pass.dat");
            rename("temp.dat", "Pass.dat");
        }
        void display_bookings()
        {
            ifstream f2("Train.dat", ios::binary);
            ifstream f1("Pass.dat", ios::binary);
            Passenger obj;
            while( !f1.eof() )
            {
                f1.read((char*)&obj, sizeof(obj));
                if(strcmp(obj.get_email(),get_email())==0)
                {
                    Train ob;
                    while(!f2.eof())
                    {
                        f2.read((char*)&obj, sizeof(obj));
                        if( obj.trno = ob.get_tno() )
                            ob.print_details();
                    }
                }
            }
            f1.close();
            f2.close();
        }
        void pass_train()
        {
            Passenger obj;
            ifstream file("Pass.dat", ios::binary);
            long int train_no;
            cout<<"\n Enter Train Number : ";
            cin>>train_no;
            int flag = 0;
            while(!file.eof())
            {
                file.read((char*)&obj, sizeof(obj));
                if(obj.get_tno() == train_no)
                {
                    obj.putdata();
                    flag++ ;
                }
            }
            if(flag == 0)
            {
                cout<<"\n This train has no bookings";
            }
            file.close();
        }
};

